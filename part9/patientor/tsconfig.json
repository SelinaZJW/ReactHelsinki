{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,   //changed to false from true, so that "e" unknown error disappears
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true, 
    "useUnknownInCatchVariables": false   //added, so that "e" unknown disappears
  },
  "include": [
    "src"
  ]
}
